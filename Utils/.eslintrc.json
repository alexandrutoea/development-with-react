{
    "extends": "eslint-config-airbnb",

    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "ecmaFeatures": {
            "jsx": "true",
            "modules": "true",
            "destructuring": "true",
            "classes": "true",
            "forOf": "true",
            "blockBindings": "true",
            "arrowFunctions": "true"
        }
    },

    "env": {
        "browser": "true",
        "node": "true"
    },

    "rules": {
      "import/extensions": 0,
      "import/no-extraneous-dependencies": 0,
      "import/no-unresolved": 0,
      "import/prefer-default-export": 0,
      "jsx-a11y/anchor-is-valid": 0,
      "jsx-a11y/click-events-have-key-events": 0,
      "jsx-a11y/label-has-for": 0,
      "jsx-a11y/no-static-element-interactions": ["error", { "handlers": ["onKeyPress","onKeyDown","onKeyUp"]}],
      "react/default-props-match-prop-types": 0,
      "react/destructuring-assignment": [1, "always", {"ignoreClassFields": true}],
      "react/forbid-prop-types": 0,
      "react/jsx-closing-tag-location": 0,
      "react/jsx-curly-spacing": [2, {"when": "always", "spacing": { "objectLiterals": "never" }}],
      "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
      "react/jsx-one-expression-per-line": 0,
      "react/no-access-state-in-setstate": 0,
      "react/prefer-stateless-function": 0,
      "react/require-default-props": 0,
      "spaced-comment": 0,
      "arrow-body-style": 0,
      "arrow-parens": 0,
      "class-methods-use-this": 0,
      "func-names": 0,
      "indent": 2,
      "new-cap": 0,
      "no-plusplus": 0,
      "no-return-assign": 0,
      "object-curly-newline": 0,
      "quote-props": 0,
      "template-curly-spacing": [2, "always"],
      "space-in-parens": ["error", "never"],
      "jsx-quotes": [2, "prefer-single"],
      "no-underscore-dangle": ["error", { "allow": ["__REDUX_DEVTOOLS_EXTENSION_COMPOSE__", "_embedded", "_id"] }],
      "max-len": ["error", { "ignoreStrings": true, "code": 180 }],
      "comma-dangle": ["error", {
        "arrays": "always-multiline",
        "exports": "always-multiline",
        "functions": "never",
        "imports": "always-multiline",
        "objects": "always-multiline"
      }]
    }
}
